@model TechnoForest.Models.Product.AirConditioners.ListAirConditionerViewModel

@{
    ViewData["Title"] = "ShowAirConditioner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims;
<p style="color:white">Result: @Model.Air.Count()</p>

<strong>
    <a asp-controller="Home" asp-action="Index" style="color: #0094ff">Go back</a>
</strong>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col" style="color:white">Model</th>
            <th scope="col" style="color:white">Power Cooling</th>
            <th scope="col" style="color:white">Power Heating</th>
            <th scope="col" style="color:white">Noise Level</th>
            <th scope="col" style="color:white">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var air in Model.Air)
        {
            <tr>
                <td>
                    <img class="Phone"src="~/Images/show_room_air_conditioners_1800btu.png" />
                </td>
                <td style="color:white">@air.ProductName - @air.Model</td>
                <td style="color:white">@air.PowerCooling</td>
                <td style="color:white">@air.PowerHeating</td>
                <td style="color:white">@air.NoiseLevel dB</td>
                <td style="color:white">@air.Price</td>
         

                @if (User.Identity.IsAuthenticated)
                {
                    <td> <a asp-controller="Product" asp-action="AddAirConditionerToCart" asp-route-id="@air.Id"><button style="background-color:#34495e" class="btn btn-primary">Аdded to cart</button></a></td>
                }
            </tr>
        }
    </tbody>
</table>
