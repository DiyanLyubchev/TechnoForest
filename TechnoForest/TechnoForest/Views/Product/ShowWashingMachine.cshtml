@model TechnoForest.Models.Product.WashingMashines.ListWashingMachineViewModel

@{
    ViewData["Title"] = "ShowWashingMachine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims;
<p>Result: @Model.WashingMashine.Count()</p>

<strong>
    <a class="goback" style="color: #0094ff" href="javascript:history.go(-1)" title="Go to previous page">Go back</a>
</strong>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Washing Machine Model</th>
            <th scope="col">Washing Machine Capacity</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var washingMachine in Model.WashingMashine)
        {
            <tr>
                <td>
                    <img class="Phone" src="~/Images/washingMachine_HomePage.jpg" />
                </td>
                <td>@washingMachine.ProductName - @washingMachine.Model</td>
                <td>@washingMachine.WashingCapacity Kg</td>
                <td>@washingMachine.Price</td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td> <a asp-controller="Product" asp-action="AddWashingMachineToCart" asp-route-id="@washingMachine.Id"><button style="background-color:#34495e" class="btn btn-primary" id="AddCartButton">Аdded to cart</button></a></td>
                }
            </tr>
        }
    </tbody>
</table>



