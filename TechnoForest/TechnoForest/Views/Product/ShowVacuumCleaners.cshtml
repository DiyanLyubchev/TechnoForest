@model TechnoForest.Models.Product.VacuumCleaners.ListVacuumCleanersViewModel

@{
    ViewData["Title"] = "ShowVacuumCleaners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims;
<p>Result: @Model.Vacuums.Count()</p>

<strong>
    <a asp-controller="Home" asp-action="Index" style="color: #0094ff">Go back</a>
</strong>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Vacuum cleaner model</th>
            <th scope="col">Power</th>
            <th scope="col">Noise level</th>
            <th scope="col">Color</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacuum in Model.Vacuums)
        {
            <tr>
                <td>
                    <img class="Phone" src="~/Images/VacuumCleanerShowRoom.jpg" />
                </td>
                <td>@vacuum.ProductName - @vacuum.Model</td>
                <td>@vacuum.Power</td>
                <td>@vacuum.NoiseLevel dB</td>
                <td>@vacuum.Color</td>
                <td>@vacuum.Price</td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td> <a asp-controller="Product" asp-action="AddFridgeToCart" asp-route-id="@vacuum.Id"><button style="background-color:#34495e" class="btn btn-primary">Аdded to cart</button></a></td>
                }
            </tr>
        }
    </tbody>
</table>
