@model TechnoForest.Models.Product.Fridges.ListFridgeViewModel

@{
    ViewData["Title"] = "ShowFridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims;
<p>Result: @Model.Fridges.Count()</p>

<strong>
    <a asp-controller="Home" asp-action="Index" style="color: #0094ff">Go back</a>
</strong>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Fridge Model</th>
            <th scope="col">Total Capacity</th>
            <th scope="col">Capacity Refrigerator</th>
            <th scope="col">Capacity Freezer</th>
            <th scope="col">Color</th>
            <th scope="col">Height</th>
            <th scope="col">Width</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fridge in Model.Fridges)
        {
            <tr>
                <td>
                    <img class="Phone" src="~/Images/fridges-product.png" />
                </td>
                <td>@fridge.ProductName - @fridge.Model</td>
                <td>@fridge.TotalCapacity</td>
                <td>@fridge.CapacityRefrigerator</td>
                <td>@fridge.CapacityFreezer</td>
                <td>@fridge.Color</td>
                <td>@fridge.Height Sm</td>
                <td>@fridge.Width Sm</td>
                <td>@fridge.Price</td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td> <a asp-controller="Product" asp-action="AddFridgeToCart" asp-route-id="@fridge.Id"><button style="background-color:#34495e" class="btn btn-primary" id="AddCartButton">Аdded to cart</button></a></td>
                }
            </tr>
        }
    </tbody>
</table>
