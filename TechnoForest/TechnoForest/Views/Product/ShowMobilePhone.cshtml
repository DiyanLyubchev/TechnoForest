@model ListMobilePhoneViewModel
@{
    ViewData["Title"] = "ShowMobilePhone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims;
    <head>
        @*<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    </head>
<p style="color:white">Result: @Model.Phone.Count()</p>
<body>
    <strong>
        <a asp-controller="Home" asp-action="Index" style="color:#0094ff">Go back</a>
    </strong>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col" style="color:white">Model</th>
                <th scope="col" style="color:white">Display size</th>
                <th scope="col" style="color:white">Memory</th>
                <th scope="col" style="color:white">Color</th>
                <th scope="col" style="color:white">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var phone in Model.Phone)
            {
            <tr>
                <td>
                    <img class="Phone" src="~/Images/Black7Plus.png"  alt="Sample Photo" />
                </td>
                <td style="color:white">@phone.ProductName - @phone.Model</td>
                <td style="color:white">@phone.SizeOfDisplay</td>
                <td style="color:white">@phone.Memory</td>
                <td style="color:white">@phone.Color</td>
                <td style="color:white">@phone.Price</td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td> <a asp-controller="Product" asp-action="AddPhoneToCart" asp-route-id="@phone.Id"><button style="background-color:#34495e" class="btn btn-primary">Аdded to cart</button></a></td>

                    @*<td>
                        <button asp-controller="Product" asp-action="AddPhoneToCart" asp-route-id="@phone.Id" type="button" class="btn btn-default btn-sm" style="background-color: cornflowerblue">
                            <span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart
                        </button>
                    </td>*@
                }
            </tr>
            }
        </tbody>
    </table>
</body>


