@model TechnoForest.Models.Product.TVs.ListTvsViewModel

@{
    ViewData["Title"] = "ViewShowTv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims;
<p style="color:white">Result: @Model.Tvs.Count()</p>

<strong>
    <a asp-controller="Home" asp-action="Index" style="color: #0094ff">Go back</a>
</strong>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th style="color:white" scope="col">Model</th>
            <th style="color:white" scope="col"> Diagonal display</th>
            <th style="color:white" scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tv in Model.Tvs)
        {
        <tr>
            <td>
                <img class="TV" src="~/Images/B0550780806.png" />
            </td>
            <td style="color:white">@tv.ProductName - @tv.Model</td>
            <td style="color:white">@tv.Size sm</td>
            <td style="color:white">@tv.Price</td>

            @if (User.Identity.IsAuthenticated)
            {
                <td> <a asp-controller="Product" asp-action="AddTvToCart" asp-route-id="@tv.Id"><button style="background-color:#34495e" class="btn btn-primary">Аdded to cart</button></a></td>
            }
        </tr>
        }
    </tbody>
</table>
