@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div style="height: 100%; ">
        <div style="   width: 100%; height:260px;" @*border-color:red; border-style: solid;*@>

            <div style="width:33%; height:250px; float:left; justify-content:space-between;">
                <a class="text-center" style="display: block; margin-left: auto; margin-right:auto;" asp-controller="Product" asp-action="ShowMobilePhone">
                    <img class="home-Page-Phone" src="~/Images/Xgray.png" alt="Sample Photo" />
                    
                </a>
            </div>

            <div style=" width:33%;   height:250px;  float: right; justify-content:space-between;">
                <a style="display: block; margin-left: auto; margin-right:auto;" asp-controller="Product" asp-action="ShowWashingMachine">
                    <img class="home-Page-Phone" src="~/Images/LG-9-KG-Auto-Washing-Machine-Front-Loading.png" />
                </a>
            </div>

            <div style=" width: 33%; height:250px;  float:right; justify-content:space-between;">
                <a asp-controller="Product" asp-action="ShowTv" style="display: block; margin-left: auto; margin-right:auto;">
                    <img class="home-Page-Phone" src="~/Images/images.png" />
                </a>

            </div>


        </div>
        <div style="width:100%; height:30px;">

            <div style=" width: 33%; height:30px; float:left;">
                <strong>
                    <a asp-controller="Product" asp-action="ShowMobilePhone">
                        <p class="text-center">
                            Mobile Phones
                        </p>
                    </a>
                </strong>
            </div>

            <div style=" width:33%; height:30px; float:right;">
                <strong>
                    <a asp-controller="Product" asp-action="ShowWashingMachine">
                        <p class="text-center">
                            Washing Machines
                        </p>
                    </a>
                </strong>
            </div>

            <div style=" width:33%; height:30px; float:right;">
                <strong>
                    <a asp-controller="Product" asp-action="ShowTv">
                        <p class="text-center">
                            TV
                        </p>
                    </a>
                </strong>
            </div>
        </div>

        <div style="height:250px; width:100%;">

            <div style=" height:250px; width:33%; float:left; justify-content:space-between;">
                <a asp-action="ShowFridge" asp-controller="Product">
                    <img class="home-Page-Fridge" src="~/Images/fridges-product.png" />
                </a>
            </div>

            <div style=" height:250px; width:33%; float:right; justify-content:space-between;">
                <a asp-action="ShowVacuumCleaners" asp-controller="Product">
                    <img class="home-vage-vacuum-cleaner" src="~/Images/home-page-canister-vacuums-wfvc-43331-bl-64_1000.png" />
                </a>
            </div>

            <div style=" height:250px; width:34%; float:right; justify-content:space-between;">
                <a asp-action="ShowAirConditioner" asp-controller="Product">
                    <img class="home-vage-vacuum-cleaner" src="~/Images/home-page-air-conditioner.png" />
                </a>
            </div>
        </div>

        <div style="height:50px; width:100%;">
            <div style="height:50px; width:33%; float:left;">
                <strong>
                    <a asp-controller="Product" asp-action="ShowFridge">
                        <p class="text-center">
                            Fridges
                        </p>
                    </a>
                </strong>
            </div>

            <div style="height:50px; width:33%; float:right; ">
                <strong>
                    <a asp-action="ShowVacuumCleaners" asp-controller="Product">
                        <p class="text-center">
                            Vacuum Cleaners
                        </p>
                    </a>
                </strong>

            </div>

            <div style="height:50px; width:34%; float:right;">
                <strong>
                    <a asp-action="ShowAirConditioner" asp-controller="Product">
                        <p class="text-center">
                            Air Conditioner
                        </p>
                    </a>
                </strong>
            </div>
        </div>
    </div>
</body>












